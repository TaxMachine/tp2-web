@model List<CodeEditor>

<main>
    <div class="row">
        <div class="col-12">
            <h1 class="titre">Éditeurs de code - Favoris</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @{
                foreach (var editor in Model)
                {
                    <div class="card carte">
                        <div class="card-body">
                            <div class="row">
                                <div class="row">
                                    <div class="col-2">
                                        <img 
                                            src="/images/@(editor.Id).svg" 
                                            class="img-fluid" 
                                            alt="image de l'éditeur"/>
                                    </div>
                                    <div class="col-10">
                                        <h2>@(editor.Name)</h2>
                                        <h4>Category: @(editor.Category)</h4>
                                        <p>@(editor.Description)</p>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <a href="/favorites/remove/@editor.Id">
                                        <img
                                            src="/images/trashcan.png"
                                            class="img-fluid fav"
                                            alt="pic id code"
                                            role="button"
                                            tabIndex="0"/>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</main>