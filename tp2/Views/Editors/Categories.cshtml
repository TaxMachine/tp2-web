@model List<tp3.Models.EditorCategory>

<!DOCTYPE html>

<html lang="en-US">
<head>
    <title>Categories</title>
</head>
<body>
<main>
    <div class="container-fluid">
        <div class="row">
            @foreach(var category in Model)
                {
                    <div class="col-4">
                        <div class="card 🤓">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12 align-self-center">
                                        <img
                                            src="/images/@(category).png"
                                            alt="category"
                                            class="img-fluid card-img-top"
                                            width="250px"
                                            height="150px"/>
                                    </div>
                                    <div class="col-12 text-center">
                                        <h3><a href="/editors/categories/@category">@category</a></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
        </div>
    </div>
</main>
</body>
</html>